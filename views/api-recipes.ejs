<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Search Recipes</title>
  <link rel="stylesheet" type="text/css" href="/main.css" />
</head>
<body>
  <%- include('partials/navbar') %> <!-- Include Navbar Partial -->
  <h1>Search for Recipes</h1>
  <form action="../recipes/api-recipes" method="GET">
    <input type="text" name="query" placeholder="Search recipes..." required>
    <button type="submit">Search</button>
  </form>

  <% if (recipes && recipes.length > 0) { %>
    <h2>Search Results</h2>
    <ul>
      <% recipes.forEach(recipe => { %>
        <li>
            <h3><a href="/recipes/<%= recipe.id %>" target="_blank"><%= recipe.title %></a></h3>
            <img src="<%= recipe.image %>" alt="<%= recipe.title %>" width="100">
            <p><%= recipe.summary %></p>
        </li>
      <% }) %>
    </ul>
  <% } else if (recipes) { %>
    <p>No recipes found. Please try again.</p>
  <% } %>

</body>
</html>